{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "gastro",
          "credit",
          "address",
          "online",
          "wlan",
          "mobility",
          "payback",
          "mobile",
          "parkingprovider"
        ]
      }
    },
    "privacyStatement": {
      "type": "object",
      "properties": {
        "paragraphs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/variable_string"
          }
        },
        "variables": {
          "type": "object",
          "properties": {
            "privacyStatementDate": {
              "type": "string"
            }
          },
          "required": [
            "privacyStatementDate"
          ],
          "additionalProperties": false
        },
        "bullets": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/bullet"
          }
        }
      },
      "additionalProperties": false,
      "title": "A companies privacy statement",
      "description": "A summary of the privacy statements of a company together with an optional date when the privacy statement was in force"
    },
    "sources": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "format": "uri"
        },
        "privacyStatement": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "required": [
        "address"
      ],
      "additionalProperties": false
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "removed"
            ]
          },
          "date": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "required": [
          "action",
          "date",
          "reason"
        ],
        "additionalProperties": false,
        "title": "History Record for an Org",
        "description": "History records for keep old data but mark them as removed on organization not existing anymore"
      }
    }
  },
  "required": [
    "name",
    "address",
    "sources"
  ],
  "additionalProperties": false,
  "title": "Record for an organization for a yml file",
  "description": "Data object containing necessary information for a company to construct letters",
  "$defs": {
    "variable_string": {
      "type": "string",
      "id": "variable_string",
      "title": "Variable String",
      "description": "A string that is used inside the letter that may contain variable placeholders. Variable placeholders must match: '/\\{(?<type>string|number|tel|email|date)?(?::)?(?<name>[a-zA-Z]{1,})(?::)?(?<label>[a-zA-Z-äöüß,. ]{0,})\\}/g'",
      "examples": [
        "Am {date:eventDate:Wann} habe ich von Ihnen ein Werbemail an die Adresse {email:eventEmail:E-Mail-Adresse} gesendet bekommen",
        "Unter personenbezogene Daten sind insbesondere auch die folgenden in Ihrer Datenschutzerklärung vom {string:privacyStatementDate} aufgeführten Kategorien..."
      ]
    },
    "bullet": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "bullets": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/bullet"
              }
            }
          },
          "required": [
            "text",
            "bullets"
          ],
          "additionalProperties": false
        }
      ],
      "id": "bullet",
      "title": "A bullet point",
      "description": "Bullet points for inline text as either a simple string or another bullet point"
    }
  }
}